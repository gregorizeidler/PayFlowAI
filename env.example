# Configurações do Sistema de Automação Financeira
# IMPORTANTE: Copie este arquivo para .env e configure as credenciais reais

# Database
POSTGRES_DB=financial_automation
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=your-secure-postgres-password-here

DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Redis
REDIS_URL=redis://redis:6379

# RabbitMQ
RABBITMQ_USER=dev_user
RABBITMQ_PASSWORD=your-secure-rabbitmq-password-here

RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@rabbitmq:5672/

# MinIO/S3 Storage
MINIO_USER=dev_user
MINIO_PASSWORD=your-secure-minio-password-here
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=${MINIO_USER}
MINIO_SECRET_KEY=${MINIO_PASSWORD}
MINIO_BUCKET_NAME=financial-documents
MINIO_SECURE=false

# JWT Configuration
SECRET_KEY=your-very-secure-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development
DEBUG=true

# External Services URLs
DOCUMENT_INGESTION_URL=http://document-ingestion:8000
OCR_NLP_URL=http://ocr-nlp:8000
AP_WORKFLOW_URL=http://ap-workflow:8000
AR_WORKFLOW_URL=http://ar-workflow:8000
RECONCILIATION_URL=http://reconciliation:8000

# Frontend
REACT_APP_API_URL=http://localhost:8000

# Payment Gateway (AR Workflow)
PAYMENT_GATEWAY_URL=https://api.pagarmepay.com
PAYMENT_GATEWAY_KEY=your-payment-gateway-key-here
PIX_KEY=your-pix-key-here

# Email Configuration (AR Workflow)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password-here
FROM_EMAIL=noreply@financialautomation.com
